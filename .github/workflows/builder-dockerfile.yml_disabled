name: builder-dockerfile
on: 
  - push
  - pull_request
jobs:
  build-tests:

    strategy:
      matrix:
        platform: [ubuntu-latest, macos-latest, windows-latest]

    runs-on: ${{ matrix.platform }}
    steps:
    - uses: actions/checkout@v1
    - name: build
      run: docker build -t vindi .
